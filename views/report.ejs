         <!-- Date of Event -->
         <div class="mb-3">
           <label for="dateTime" class="form-label">Date of Event</label>
           <input type="date" class="form-control" name="dateTime" id="dateTime" required>
         </div>

         <!-- Gender -->
         <div class="mb-3">
           <label for="gender" class="form-label">Gender of Affected Patient</label>
           <select name="gender" class="form-select" required>
             <option value="">Select Gender</option>
             <option>Female</option>
             <option>Male</option>
             <option>Other</option>
           </select>
         </div>

         <!-- Unit/Department -->
         <div class="mb-3">
           <label for="unit" class="form-label">Unit/Department</label>
           <select name="unit" class="form-select" required>
             <option value="">Select Unit</option>
             <option>ICU</option>
             <option>PACU</option>
             <option>Surgery</option>
             <option>Cancer Center</option>
             <option>Other</option>
           </select>
         </div>

         <!-- Persons Involved -->
         <div class="mb-3">
           <label class="form-label">Persons Involved</label><br>
           <% const roles = ["Surgeons", "Nurses", "Pharmacists", "Physician Assistants", "Transport Staff", "Residents", "Physical Therapists", "Other"]; %>
           <% roles.forEach(role => { %>
             <div class="form-check form-check-inline">
               <input class="form-check-input" type="checkbox" name="personsInvolved" value="<%= role %>">
               <label class="form-check-label"><%= role %></label>
             </div>
           <% }) %>
         </div>

         <!-- Sentinel Event Type -->
         <div class="mb-3">
           <label for="eventType" class="form-label">Type of Sentinel Event</label>
           <select name="eventType" class="form-select" id="eventType" onchange="toggleOtherEvent()" required>
             <option value="">Select Event Type</option>
             <option>Fall</option>
             <option>Medication Error</option>
             <option>Transfusion Error</option>
             <option>Delay in Treatment</option>
             <option>Other</option>
           </select>
           <textarea name="eventTypeOther" class="form-control mt-2" id="eventTypeOther" style="display: none;" placeholder="Describe the event if Other selected"></textarea>
         </div>

         <!-- Response/Treatment Provided -->
         <div class="mb-3">
           <label class="form-label">Response / Treatment Provided</label><br>
           <% const responses = ["Provider Notified", "X-Ray Imaging", "Patient Readmitted to OR", "Wound Care", "Other"]; %>
           <% responses.forEach(response => { %>
             <div class="form-check form-check-inline">
               <input class="form-check-input" type="checkbox" name="treatments" value="<%= response %>">
               <label class="form-check-label"><%= response %></label>
             </div>
           <% }) %>
         </div>

         <!-- Body Site Affected -->
         <div class="mb-3">
           <label for="bodySite" class="form-label">Body Site Affected</label>
           <select name="bodySite" class="form-select" id="bodySite" onchange="toggleOtherBody()" required>
             <option value="">Select Site</option>
             <option>Head</option>
             <option>Neck</option>
             <option>Chest</option>
             <option>Back</option>
             <option>Arms</option>
             <option>Legs</option>
             <option>Groin</option>
             <option>Other</option>
           </select>
           <textarea name="bodySiteOther" class="form-control mt-2" id="bodySiteOther" style="display: none;" placeholder="Describe the body site if Other selected"></textarea>
         </div>

         <!-- Type of Injury -->
         <div class="mb-3">
           <label for="injuryType" class="form-label">Type of Injury</label>
           <select name="injuryType" class="form-select" id="injuryType" onchange="toggleOtherInjury()" required>
             <option value="">Select Injury</option>
             <option>Bruising</option>
             <option>Burns</option>
             <option>Concussion</option>
             <option>Cut</option>
             <option>Dislocation</option>
             <option>Fracture</option>
             <option>Laceration</option>
             <option>Radiation</option>
             <option>Stabbing</option>
             <option>Other</option>
           </select>
           <textarea name="injuryOther" class="form-control mt-2" id="injuryOther" style="display: none;" placeholder="Describe the injury if Other selected"></textarea>
         </div>

         <!-- General Comments -->
         <div class="mb-3">
           <label for="description" class="form-label">Additional Information / Comments</label>
           <textarea name="description" class="form-control" rows="4" placeholder="Add any additional context or notes here..."></textarea>
         </div>

         <button type="submit" class="btn btn-primary">Submit Report</button>
       </form>
     </div>

     <!-- JS for showing 'Other' fields -->
     <script>
       function toggleOtherEvent() {
         document.getElementById('eventTypeOther').style.display =
           document.getElementById('eventType').value === 'Other' ? 'block' : 'none';
       }
       function toggleOtherBody() {
         document.getElementById('bodySiteOther').style.display =
           document.getElementById('bodySite').value === 'Other' ? 'block' : 'none';
       }
       function toggleOtherInjury() {
         document.getElementById('injuryOther').style.display =
           document.getElementById('injuryType').value === 'Other' ? 'block' : 'none';
       }
     </script>
   </body>


             </form>

                    </div>
                  </div>
                </div>
              </body>

             
   </html>
