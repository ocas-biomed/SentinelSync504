<head>
  <meta charset="UTF-8">
  <title>SentinelSync</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>


<h2>Submit Sentinel Event</h2>
<form method="POST" action="/submit">
  <label>Date of Incident: <input type="date" name="dateTime" required></label><br>
  <label>Event Type:
    <select name="eventType" onchange="toggleOther(this)" required>
      <option value="">--Select--</option>
      <option>Patient Fall</option>
      <option>Medication Dispensation Error</option>
      <option>Wrong Site Surgery</option>
      <option>Equipment Failure</option>
      <option>Other</option>
    </select>
  </label><br>
  <div id="otherBox" style="display:none;">
    <label>Other Description:<br>
      <textarea name="description"></textarea>
    </label><br>
  </div>
  <div id="defaultBox">
    <label>Details:<br>
      <textarea name="description"></textarea>
    </label>
  </div>
  <button type="submit">Submit Report</button>
</form>
<script>
  function toggleOther(sel) {
    document.getElementById('otherBox').style.display = sel.value === "Other" ? 'block' : 'none';
    document.getElementById('defaultBox').style.display = sel.value === "Other" ? 'none' : 'block';
  }
</script>
